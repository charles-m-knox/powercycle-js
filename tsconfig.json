{
  "compilerOptions": {
    "lib": [
      "ESNext"
    ],
    "types": [
      "@girs/gjs",
      "@girs/gjs/dom",
      "@girs/gio-2.0",
      "@girs/glib-2.0",
      "@girs/gtk-4.0",
      "@girs/adw-1",
      "@types/jest"
    ],
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "baseUrl": "./src",
    // "paths": {
    //   "shared/*": [
    //     "./src/shared"
    //   ]
    // }
  },
  "include": [
    "src/ui/*.ts",
    "src/ui/**/*.ts",
    "src/shared/*.ts",
    "src/shared/**/*.ts",
  ],
}