{
  "compilerOptions": {
    "lib": [
      "ESNext"
    ],
    "types": [
      "node",
      "@types/jest"
    ],
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "baseUrl": "./src",
    // "paths": {
    //   "shared/*": [
    //     "./src/shared"
    //   ]
    // }
  },
  "include": [
    "src/ant/*.ts",
    "src/ant/**/*.ts",
    "src/shared/*.ts",
    "src/shared/**/*.ts",
  ],
}